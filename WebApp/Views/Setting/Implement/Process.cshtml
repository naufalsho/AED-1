@model Domain.Transaction.Implement.TTrnImplementDto
@using Core

@{
    Layout = ViewPath.ModalLayout;
}


<div>
    <form id="FormInput" asp-controller="@ViewData[ViewDataType.Controller]" asp-action="@ViewData[ViewDataType.Action]" asp-antiforgery="true" class="form-horizonta">
        <input type="hidden" id="" asp-for="Id" />
        <div class="row mb-15px">
            <label class="form-label col-form-label col-md-3">Model Attachment</label>
            <div class="col-md-9">
                <select asp-for="ModelCodeAttach" asp-items="@Model.SLModelAttachment" class="form-select">
                    <option value="">Please select one</option>
                </select>
            </div>
        </div>

        <div class="row mb-15px">
            <label class="form-label col-form-label col-md-3">Model Product</label>
            <div class="col-md-9">
                <select asp-for="ModelCode" asp-items="@Model.SLModelProduct" class="form-select">
                    <option value="">Please select one</option>
                </select>
            </div>
        </div>

        <div class="row mb-15px">
            <label class="form-label col-form-label col-md-3">ClassValue</label>
            <div class="col-md-9">
                <select asp-for="ClassValueCode" asp-items="@Model.SLClassValue" class="form-select">
                    <option value="">Please select one</option>
                </select>
            </div>
        </div>

        <div id="rowActive mt-2" class="row mb-15px">
            <label class="form-label col-form-label col-md-3">Active?</label>
            <div class="col-md-9">
                <div class="form-check mt-2 mb-2">
                    <input type="checkbox" class="form-check-input" asp-for="IsActive" checked="@Model.IsActive" />
                </div>
            </div>
        </div>

    </form>
</div>
