@{
    ViewData["AppContentNone"] = "true";
}

<style>
        .card-link {
            text-decoration: none;
            color: inherit;
        }
        .card-link .panel:hover {
            background-color: #007aff;
            color: white;
        }

        .business-card {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
            text-align: center;
            padding: 20px;
            border: 2px solid #606060;
            border-radius: 5px;
            transition: box-shadow 0.3s ease, border 0.3s ease, height 0.3s ease;
            overflow: hidden;
            min-height: 300px;
            height: auto;
        }

        .business-card .image-wrapper {
            width: 100%; /* Make the image-wrapper fill the parent width */
            height: 200px; /* Set a fixed height for the image-wrapper */
            overflow: hidden; /* Hide overflow to maintain aspect ratio */
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .business-card img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Scale the image to cover the container while maintaining aspect ratio */
            transition: opacity 0.3s ease, transform 0.3s ease;
            opacity: 0.3;
        }

        .business-card .read-more-btn {
            opacity: 0;
            transition: opacity 0.3s ease, transform 0.3s ease;
            transform: translateY(20px);
        }

        .business-card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            border: 2px solid #007aff;
            height: auto; /* Allow the card to expand */
        }

        .business-card:hover img {
            opacity: 1;
        }

        .business-card:hover .read-more-btn {
            opacity: 1;
            transform: translateY(0); /* Slide up on hover */
        }
        
</style>
