@model IEnumerable<Domain.Dashboard.DescriptionGroupDto>

@using Core;
@using Domain.Dashboard;

@{
    ViewData["AppContentNone"] = "true";
    ViewBag.Title = "Power BI Dashboard";
    bool showTabs = Model.Count() > 1; // Show tabs only if there's more than one description
}

<style>
        .image-wrapper {
            width: 100%;
            height: 200px; /* Adjust this height as needed */
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card-img-top {
            width: 100%;
            height: 100%;
            object-fit: contain; /* Ensures the image covers the entire area while maintaining its aspect ratio */
        }

        .card-link {
            text-decoration: none;
            color: inherit;
        }

            .card-link .card {
                border: none;
                transition: transform 0.3s ease, box-shadow 0.3s ease;
            }

                .card-link .card:hover {
                    transform: scale(1.05);
                    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
                }

            .card-link .card-body {
                padding: 1rem;
                background-color: #f8f9fa;
                border-radius: 0.5rem;
            }

        .logo-slider .item-container {
            padding: 0 10px; /* Add padding to create space between items */
            box-sizing: border-box;
        }

        .logo-slider .item {
            background-color: #fff;
            box-shadow: 0 4px 5px #cacaca;
            border-radius: 8px;
            padding: 15px;
            border: solid 2px rgb(65, 64, 64);
            cursor: pointer;
            transition: .5s ease;
            opacity: 0.3;
        }

        .slick-dots li.slick-active button:before {
            color: #007aff;
        }

        .slick-dots li button:before {
            font-size: 12px;
        }

        .slick-next:before,
        .slick-prev:before {
            color: #007aff;
            font-size: 24px;
        }

        .item:hover {
            display: block;
        }

        .item.active {
            border: 2px solid #007aff;
            opacity: 1;
        }

        .logo-slider .item:hover {
            color: rgb(65, 64, 64);
            opacity: 1;
            border: solid 2px rgb(65, 64, 64);
        }

        .logo-slider .item img {
            transition: all .5s ease-in-out;
        }


    /* .logo-slider .item:hover img {
        transform: scale(1.1)
    } */
</style>

<div class="container">
    <h1 class="text-center">Product Line</h1>
    <hr />

    @if (showTabs)
    {
        <!-- Tab Navigation -->
        <ul class="nav nav-tabs" id="productTab" role="tablist">
            @for (int i = 0; i < Model.Count(); i++)
            {
                var group = Model.ElementAt(i);
                var safeDescription = group.Description.Replace(" ", "-"); // Replace spaces with hyphens
                <li class="nav-item">
                    <a class="nav-link @(i == 0 ? "active" : "")"
                       id="tab-@safeDescription"
                       data-toggle="tab"
                       href="#description-@safeDescription"
                       role="tab"
                       aria-controls="description-@safeDescription"
                       aria-selected="@(i == 0 ? "true" : "false")"
                       data-category="@group.Code">
                        @group.Description
                    </a>
                </li>
            }
        </ul>
    }

    <!-- Tab Content -->
    <div class="tab-content" id="productTabContent">
        @for (int i = 0; i < Model.Count(); i++)
        {
            var group = Model.ElementAt(i);
            var safeDescription = group.Description.Replace(" ", "-"); // Replace spaces with hyphens
            <div class="tab-pane fade @(i == 0 ? "show active" : "")"
                 id="description-@safeDescription"
                 role="tabpanel"
                 aria-labelledby="tab-@safeDescription">
                <div class="logo-slider mt-4">
                    @foreach (var brand in group.Brands)
                    {
                        <div class="item-container">
                            <div class="item" data-id="@brand.Code">
                                <div class="card mb-4">
                                    <div class="image-wrapper">
                                        <img class="card-img-top" src="~/assets/images/product/@(brand.BrandImage ?? "unknown.png")" alt="@brand.Name">
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">@brand.Name</h5>
                                        <p class="card-text">@brand.Country</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Slider-for content that changes based on the selected brand -->
                <div class="slider-for mt-5">
                    @foreach (var brand in group.Brands)
                    {
                        <div class="panel panel-inverse">
                            <div class="panel-body">
                                <div class="row text-center justify-content-center">
                                    <!-- Dynamic feature icons/menus based on the brand -->
                                    @foreach (var feature in brand.Features)
                                    {
                                        <div class="col-md-3 mb-4">
                                            <a href="@feature.Url" class="card-link" target="@feature.Target">
                                                <div class="card">
                                                    <div class="card-body text-center">
                                                        <i class="fa @feature.IconClass text-muted mb-4 fa-4x"></i>
                                                        <h5 class="card-title"><b>@feature.Name</b></h5>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize the logo-slider for each tab content
            $('.logo-slider').slick({
                slidesToShow: 3,
                slidesToScroll: 1,
                dots: true,
                arrows: true,
                centerMode: false,
                focusOnSelect: true,
                asNavFor: ".slider-for",
                responsive: [
                    {
                        breakpoint: 1024,
                        settings: {
                            slidesToShow: 2,
                            slidesToScroll: 1,
                            infinite: true,
                            dots: true
                        }
                    },
                    {
                        breakpoint: 600,
                        settings: {
                            slidesToShow: 1,
                            slidesToScroll: 1,
                            dots: false
                        }
                    }
                ]
            });

            // Initialize the slider-for for each tab content
            $('.slider-for').slick({
                slidesToShow: 1,
                slidesToScroll: 1,
                arrows: false,
                fade: true,
                asNavFor: ".logo-slider"
            });

            // Event listener for when an item in the slider is clicked
            $('.logo-slider').on('click', '.item', function () {
                // Remove 'active' class from all items
                $('.logo-slider .item').removeClass('active').css('opacity', '0.3');

                // Add 'active' class to the clicked item
                $(this).addClass('active').css('opacity', '1');
            });

            // Activate tab based on hash in the URL
            var hash = window.location.hash;
            if (hash) {
                var tabToActivate = 'a[href="' + hash + '"]';
                $(tabToActivate).tab('show');  // Activates the tab
            }

            $('#productTab a').on('shown.bs.tab', function (e) {
                var target = $(e.target).attr("href"); // activated tab
                $(target).find('.logo-slider, .slider-for').slick('setPosition');
            });
        });
    </script>
}
