@using Core;

@{
    Layout = ViewPath.ModalLayout;
}

<div>
    <form id="FormInput" asp-controller="@ViewData[ViewDataType.Controller]" asp-action="@ViewData[ViewDataType.Action]" asp-antiforgery="true" class="form-horizontal" enctype="multipart/form-data">
        
        @* <div class="row">
            <div class="col-yard col-md-8 border-end">
                <!-- Model Description Section -->
