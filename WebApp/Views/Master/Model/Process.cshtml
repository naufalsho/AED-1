                    <h5>Model Description</h5>
                </div>
 *@
                <div class="row mb-15px">
                    <label class="form-label col-form-label col-md-3">Code</label>
                    <div class="col-md-9">
                        <input class="form-control" asp-for="Code" required  reqd/>
                    </div>
                </div>

                <div class="row mb-15px">
                    <label class="form-label col-form-label col-md-3">Brand</label>
                    <div class="col-md-9">
                        <select asp-for="BrandCode" asp-items="@Model.Brand" class="form-select">
                            <option value="">Please select one</option>
                        </select>
                    </div>
                </div>

                 <div class="row mb-15px">
                    <label class="form-label col-form-label col-md-3">Model</label>
                    <div class="col-md-9">
                        <input class="form-control" asp-for="Model" required />
                    </div>
                </div>
        
                 <div class="row mb-15px">
                    <label class="form-label col-form-label col-md-3 required">Type</label>
                    <div class="col-md-9">
                        <select asp-for="Type"  class="form-select">
                            <option value="">Please select one</option>
                            <option value="Attachment">Attachment</option>
                            <option value="Unit">Unit</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-15px">
                    <label class="form-label col-form-label col-md-3">Class</label>
                    <div class="col-md-9">
                        <select asp-for="ClassCode" asp-items="@Model.Class" class="form-select">
                            <option value="">Please select one</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-15px">
                    <label class="form-label col-form-label col-md-3">Distributor</label>
                    <div class="col-md-9">
                        <select class="form-select" id="datalistOptions" asp-for="Distributor" placeholder="Select or type to search...">
                            <option value="" disabled selected>Select a distributor...</option>
                            <option value="PT. Traktor Nusantara">PT. Traktor Nusantara</option>
                            <option value="PT. Wahana Inti Selaras">PT. Wahana Inti Selaras</option>
                            <option value="PT. Altrak 1978">PT. Altrak 1978</option>
                            <option value="PT. Agrisarana">PT. Agrisarana</option>
                            <option value="PT. Bina Pertiwi">PT. Bina Pertiwi</option>
                            <option value="PT. Swadaya Harapan Nusantara">PT. Swadaya Harapan Nusantara</option>
                            <option value="PT. Satrindo Mitra Utama">PT. Satrindo Mitra Utama</option>
                        </select>
                    </div>
                </div>


                <div class="row mb-15px">
                    <label class="form-label col-form-label col-md-3">Country</label>
                    <div class="col-md-9">
                        <input class="form-control" list="datalistOptionsCountry" asp-for="Country" placeholder="Type to search...">
                            <datalist id="datalistOptionsCountry">
                                <option value="Indonesia"></option>
                                <option value="India"></option>
                                <option value="Japan"></option>
                                <option value="Korea Selatan"></option>
                                <option value="China"></option>
                            </datalist>
                    </div>
                </div>

                <div class="row mb-15px">
                    <label class="form-label col-form-label col-md-3">Model Image</label>
                    <div class="col-md-9">
                        <input class="form-control" accept=".jpg, .jpeg, .png" asp-for="ModelImage">
                    </div>
                </div>



                <div id="rowActive mt-2" class="row mb-15px">
                    <label class="form-label col-form-label col-md-3">Active?</label>
                    <div class="col-md-9">
                        <div class="form-check mt-2 mb-2">
                            <input  type="checkbox" class="form-check-input" asp-for="IsActive" checked="@Model.IsActive" autocomplete="off" />
                        </div>
                    </div>
                </div>
           @*  </div>



            <div class="col-capacity col-md-4" >
                <!-- Optional Description Section -->
                <div class="border-bottom mb-2 optional-description">
                    <h5>Optional Description</h5>
                </div>

                <div class="row mb-15px optional-description">
                    <label class="form-label col-form-label col-md-12">Cap</label>
                    <div class="col-md-12">
                        <select asp-for="CapCode" asp-items="@Model.Cap" class="form-select">
                            <option value="">Please select one</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-15px">
                    <label class="form-label col-form-label col-md-12">Lifting Height</label>
                    <div class="col-md-12">
                        <select asp-for="LiftingHeightCode" asp-items="@Model.LiftingHeight" class="form-select">
                            <option value="">Please select one</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-15px">
                    <label class="form-label col-form-label col-md-12">Mast Type</label>
                    <div class="col-md-12">
                        <select asp-for="MastTypeCode" asp-items="@Model.MastType" class="form-select">
                            <option value="">Please select one</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-15px">
                    <label class="form-label col-form-label col-md-12">Tire</label>
                    <div class="col-md-12">
                        <select asp-for="TireCode" asp-items="@Model.Tire" class="form-select">
                            <option value="">Please select one</option>
                        </select>
                    </div>
                </div>
            </div>
        </div> *@
    </form>
</div>


