@model Domain.MasterYardArea.YardAreaDto;
@using Core;

@{
    ViewData["AppContentNone"] = "true";
    Layout = ViewPath.ModalLayout;
}


@{
}

<div>
    <form id="FormInput" asp-controller="@ViewData[ViewDataType.Controller]" asp-action="@ViewData[ViewDataType.Action]" asp-antiforgery="true">
        <input type="hidden" asp-for="Id" class="id" />
        <div class="form-group">
            <label for="form-label" class="require">Code Area</label>
            <input asp-for="CodeArea" class="form-control mt-2 code-area" autofocus="" autocomplete="off" required="" />
        </div>


        <div class="form-group mt-2">
            <label for="form-label" class="require">Araa Name</label>
            <input asp-for="Name" class="form-control mt-2" required/>
        </div>

        <div class="form-group mt-2">
            <label for="form-label" class="require">Capacity</label>
            <input asp-for="Capacity" class="form-control mt-2"  required/>
        </div>

        <div class="form-group mt-2">
            <label for="form-label" class="require">Curreent Occupancy</label>
            <input asp-for="CurrentOccupancy" class="form-control mt-2"  required/>
        </div>

        <div id="rowActive mt-2" class="row mb-15px">
            <label class="form-label col-form-label col-md-3">Active?</label>
            <div class="col-md-9">
                <div class="form-check mt-2 mb-2">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                </div>
            </div>
        </div>
    </form>
</div>
