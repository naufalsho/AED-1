@model Domain.AccessRole.RoleDto
@using Core;

@{
    Layout = ViewPath.ModalLayout;
}

<div>
    <form id="FormInput" asp-controller="@ViewData[ViewDataType.Controller]" asp-action="@ViewData[ViewDataType.Action]" asp-antiforgery="true">
        <input type="hidden" asp-for="Id" />
        <div class="row mb-15px">
            <label class="form-label col-form-label col-md-3">Name</label>
            <div class="col-md-9">
                <input asp-for="Name" class="form-control" required />
            </div>
        </div>
        <div class="row mb-15px">
            <label class="form-label col-form-label col-md-3">Active?</label>
            <div class="col-md-9">
                <div class="form-check mt-2 mb-2">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                </div>
            </div>
        </div>
        <div class="row">
            <label class="form-label col-form-label col-md-3">Menu Access</label>
        </div>
        <div class="row mb-15px">
            <div class="col-md-12">
                <table class="table table-striped table-bordered align-middle">
                    <thead>
                        <tr>
                            <th class="col-4 text-center text-nowrap">Group</th>
                            <th class="col-4 text-center text-nowrap">Name</th>
                            <th class="col-1 text-center text-nowrap">View</th>
                            <th class="col-1 text-center text-nowrap">Create</th>
                            <th class="col-1 text-center text-nowrap">Edit</th>
                            <th class="col-1 text-center text-nowrap">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.RoleMenus.Count(); i++)
                        {
                            <tr>
                                <input type="hidden" asp-for="@Model.RoleMenus[i].MenuId" />
                                <td>@Model.RoleMenus[i].GroupName</td>
                                <td>@Model.RoleMenus[i].MenuName</td>
                                <td class="text-center">
                                    <input class="form-check-input" type="checkbox" asp-for="@Model.RoleMenus[i].AllowView" />
                                </td>
                                <td class="text-center">
                                    <input class="form-check-input" type="checkbox" asp-for="@Model.RoleMenus[i].AllowCreate" />
                                </td>
                                <td class="text-center">
                                    <input class="form-check-input" type="checkbox" asp-for="@Model.RoleMenus[i].AllowEdit" />
                                </td>
                                <td class="text-center">
                                    <input class="form-check-input" type="checkbox" asp-for="@Model.RoleMenus[i].AllowDelete" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </form>
</div>
